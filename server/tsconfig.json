{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["es2024", "ESNext.Array", "ESNext.Collection", "ESNext.Iterator"],
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",

    "rootDir": "./app",
    "outDir": "./build",
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "#*": ["./app/*"]
    }
  },
  "tsc-alias": {
    "verbose": true, // Enable verbose logging to see what it's doing
    "resolveFullPaths": true // Often useful for ESM
  },
  "include": ["app/**/*.ts", "app/image-ai/model.ts"],
  "exclude": ["node_modules", "build"]
}
